{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/server.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/server.js" },
    { "source": "/skills.md", "destination": "/public/skills.md" },
    { "source": "/skill.json", "destination": "/public/skill.json" },
    { "source": "/skill.md", "destination": "/public/skill.md" },
    { "source": "/health", "destination": "/api/server.js" }
  ]
}
